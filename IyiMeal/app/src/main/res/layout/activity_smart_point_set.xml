<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_smart_point_set"
    android:orientation="vertical"
    android:background="@color/huif5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <include
        android:id="@+id/view_top"
        layout="@layout/view_top" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white2"
        android:paddingRight="20dp"
        android:paddingLeft="@dimen/height20"
        android:layout_marginTop="@dimen/height15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="api密匙"
            android:textColor="@color/gray_9"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/api"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入"
            android:maxLength="@integer/length_text"
            android:singleLine="true"
            android:textColor="@color/black3"
            android:textColorHint="@color/bg_gray"
            android:textSize="15dp" />
    </LinearLayout>

    <include layout="@layout/border" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white2"
        android:paddingRight="20dp"
        android:paddingLeft="@dimen/height20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="商户编码"
            android:textColor="@color/gray_9"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/shopnub"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入"
            android:maxLength="@integer/length_text"
            android:singleLine="true"
            android:textColor="@color/black3"
            android:textColorHint="@color/bg_gray"
            android:textSize="15dp" />
    </LinearLayout>

    <include layout="@layout/border" />
</LinearLayout>
