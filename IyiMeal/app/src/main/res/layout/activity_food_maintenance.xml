<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_top" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recyclebin"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#6a5889"
                android:gravity="center"
                android:text="回收站"
                android:textColor="@color/white"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/resetall"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#673AB7"
                android:gravity="center"
                android:text="添加分类"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/sureall"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#825DC5"
                android:gravity="center"
                android:text="添加菜品"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/bottom"
            android:background="@color/white2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/huif5"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/leftListView"
                    android:scrollbars="none"
                    android:layout_width="100dip"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <!--android:background="#2f4471"-->

            <android.support.v4.view.ViewPager
                android:id="@+id/fragmentViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--android:background="#e4e8e9"-->
            </android.support.v4.view.ViewPager>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
