<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="40dip"
    android:background="#F5F5F5"
 >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="40dip"
        android:layout_marginLeft="@dimen/height10"
       android:layout_marginRight="@dimen/height10"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/leftTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="@dimen/height15"
            android:text="面点" />

        <TextView
            android:id="@+id/nub"
            android:background="@drawable/brand_red"
            android:layout_width="18dp"
            android:textSize="@dimen/height10"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="18dp"
            android:text="11" />
    </RelativeLayout>
    <View
        android:layout_width="100dp"
        android:layout_below="@+id/zuo"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/height10"
        android:layout_marginRight="@dimen/height10"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"></View>
    <View
        android:id="@+id/heng"
        android:layout_width="100dp"
        android:layout_below="@+id/zuo"
        android:visibility="gone"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow67"></View>
</RelativeLayout>