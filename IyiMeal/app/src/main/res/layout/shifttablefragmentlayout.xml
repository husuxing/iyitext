<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/view_top" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/yellow67"
            android:layout_height="@dimen/height70" />

        <jdhe.iyibank.com.iyimeal.costomview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_centerInParent="true"
            android:layout_height="90dp"
            android:src="@mipmap/dc_1"
            app:border_color="@color/translucent_white"
            app:border_width="@dimen/head_border" />

    </RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:textSize="18dp"
    android:textColor="@color/black"
    android:layout_height="wrap_content"
    android:text="谢勇"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/height15"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="交班时间"
                android:textSize="15dp" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/height30"
                android:text="2017-01-05  20:02:03"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <include layout="@layout/border"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="操作员"
                android:textSize="15dp" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/height30"
                android:text="13665465896"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <include layout="@layout/border"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="班次"
                android:textSize="15dp" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/height30"
                android:text="夜班"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <include layout="@layout/border"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="收款金额"
                android:textSize="15dp" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/height30"
                android:text="￥ 2033.00"
                android:textColor="#f63d3c"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <include layout="@layout/border"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="收款方式"
                android:textSize="15dp" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/height30"
                android:text="现金、刷卡、微信、支付宝"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <include layout="@layout/border"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="总计"
                android:textSize="15dp" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/height30"
                android:text="￥ 2033.00"
                android:textSize="@dimen/height18"
                android:textColor="#f63d3c"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <include layout="@layout/border"></include>
    </LinearLayout>
    <Button
        android:id="@+id/comfirmBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height25"
        android:layout_marginRight="@dimen/height20"
        android:layout_marginLeft="@dimen/height20"
        android:text="确认交班"
        android:textSize="@dimen/height15"
        android:textColor="@color/white"
        android:background="@color/yellow67" />
</LinearLayout>
