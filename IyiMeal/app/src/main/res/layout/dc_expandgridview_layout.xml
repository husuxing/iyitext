<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="75dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gridview_imageview"
            android:layout_width="53dp"
            android:padding="@dimen/height5"
            android:layout_height="53dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/dc_0" />


        <TextView
            android:id="@+id/gridview_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black3"
            android:text="1桌位"/>


    </LinearLayout>
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:background="@drawable/border_gray"
        android:scaleType="center"
        android:src="@mipmap/gou"
         android:visibility="gone"/>

    <TextView
        android:id="@+id/pin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/brand_yellow_100"
        android:text="拼"
        android:layout_marginTop="@dimen/height5"
        android:layout_centerHorizontal="true"
        android:gravity="center"
         android:textColor="@color/white2"
        android:visibility="gone"
      />



    <!--android:paddingBottom="@dimen/height6"-->
    <!--android:paddingLeft="6dp"-->
    <!--android:paddingRight="6dp"-->
    <!--android:paddingTop="@dimen/height6"-->
</RelativeLayout>
