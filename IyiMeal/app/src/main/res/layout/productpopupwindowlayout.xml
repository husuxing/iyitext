    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height100"
        android:background="@color/white2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/height18"
            android:layout_marginLeft="@dimen/height18"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/height14"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="已点菜单" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="@dimen/height14"
                android:background="@drawable/border_edit_wrirh"
                android:layout_gravity="center_vertical"
                android:text="清空" />
        </LinearLayout>
        <include layout="@layout/border"></include>
