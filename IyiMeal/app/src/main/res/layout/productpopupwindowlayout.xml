            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="0dp"

                android:layout_weight="1"
                android:divider="@null" />
        <!--</cn.bingoogolapple.refreshlayout.BGARefreshLayout>-->
    </LinearLayout>

</LinearLayout>