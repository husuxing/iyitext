<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_top" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/height20"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.5"
            android:text="手机号"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:background="@null"
            android:hint="请输入"
            android:inputType="phone"
            android:textSize="@dimen/height15"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:maxLength="30"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="10" />
    </LinearLayout>

    <include layout="@layout/border"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.5"
            android:text="设置密码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/setps"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="请输入"
            android:inputType="textPassword"
            android:textSize="@dimen/height15"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:maxLength="30"
            android:layout_marginRight="5dp"
            android:layout_weight="10" />
    </LinearLayout>

    <include layout="@layout/border"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.5"
            android:text="确认密码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/comfirmps"
            android:layout_width="0dp"
            android:background="@null"
            android:hint="请输入"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:maxLength="30"
            android:inputType="textPassword"
            android:layout_marginRight="5dp"
            android:layout_weight="10" />
    </LinearLayout>

    <include layout="@layout/border"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.5"
            android:text="验证码"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code"
                android:background="@null"
                android:layout_width="0dp"
                android:hint="请输入"
                android:textSize="@dimen/height15"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:maxLength="30"
                android:inputType="number"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="2.5" />

            <Button
                android:id="@+id/getcodebtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.1"
                android:background="@drawable/corners_deep_orange_small"
                android:paddingLeft="@dimen/height8"
                android:paddingRight="@dimen/height8"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/border"></include>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/registerBt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_orange_corners_big_selector"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>
