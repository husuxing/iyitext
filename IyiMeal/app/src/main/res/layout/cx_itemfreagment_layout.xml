<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cxbj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height10"
            android:layout_marginTop="@dimen/height10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="台号："
                android:textColor="@color/hei34"
                android:textSize="@dimen/height13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="天字一号座"
                android:textColor="@color/textcolor87"
                android:textSize="@dimen/height13" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="￥ "
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/redf5"
                    android:text="62.00"
                    android:textSize="@dimen/height20" />
            </LinearLayout>
            <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:text="62.00"-->
                <!--android:textColor="@color/redf5"-->
                <!--android:textSize="@dimen/height20" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height10"
            android:layout_marginTop="@dimen/height2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="操作人："
                android:textColor="@color/hei34"
                android:textSize="@dimen/height13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="小王"
                android:textColor="@color/textcolor87"
                android:textSize="@dimen/height13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingBottom="@dimen/height1"
                android:text="2017-07-10  15:48:09"
                android:textColor="@color/hei34"
                android:textSize="@dimen/height11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height10"
            android:layout_marginRight="@dimen/height20"
            android:layout_marginTop="@dimen/height5"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:background="@drawable/border_edit_text1"
                android:gravity="center"
                android:text="撤销"
                android:textColor="@color/black"
                android:textSize="@dimen/height13" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/cancle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/cancell"/>
</RelativeLayout>